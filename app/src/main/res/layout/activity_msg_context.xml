<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/msg_imageView"
        android:layout_width="222dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@color/ksw_md_solid_normal"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="76dp" />

    <Button
        android:id="@+id/msg_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg_imageView"
        android:layout_alignLeft="@+id/msg_textView"
        android:layout_alignStart="@+id/msg_textView"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:text="确定" />

    <TextView
        android:id="@+id/msg_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_imageView"
        android:layout_alignStart="@+id/msg_imageView"
        android:layout_alignTop="@+id/msg_imageView"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:text="短信内容" />

    <TextView
        android:id="@+id/msg_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_textView"
        android:layout_alignStart="@+id/msg_textView"
        android:layout_below="@+id/msg_textView"
        android:layout_marginTop="11dp"
        android:text="来自:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/msg_from"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_textView2"
        android:layout_alignBottom="@+id/msg_textView2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/msg_textView2"
        android:layout_toRightOf="@+id/msg_textView2"
        android:text="...."
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/msg_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_textView2"
        android:layout_alignStart="@+id/msg_textView2"
        android:layout_below="@+id/msg_textView2"
        android:layout_marginTop="12dp"
        android:text="内容:"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/msg_context"
        android:layout_width="155dp"
        android:layout_height="220dp"
        android:layout_alignBaseline="@+id/msg_textView3"
        android:layout_alignBottom="@+id/msg_textView3"
        android:layout_alignLeft="@+id/msg_from"
        android:layout_alignStart="@+id/msg_from"
        android:text="...." />

</RelativeLayout>